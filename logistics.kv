

MDScreen:
    canvas:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: (1500,1500)
            pos: self.pos
    # Set screen name
    name: "logistics"
    orientation: 'vertical'
    
    BoxLayout:
        orientation:"vertical"
        spacing:0
        
        MDTopAppBar:
            elevation:0
            id:header
            title:"View logistics"
            pos_hint_x: -0.03
            
            size_hint:(1,0.2)
            md_bg_color: (1,1,1,1)
            #specific_text_color:(33/256,150/256,243/256,1)
            specific_text_color:(0,0,0,1)
            #right_action_items: [['book', lambda x: nav_drawer.toggle_nav_drawer()]]
        
        #BoxLayout:
        BoxLayout:  
            pos_hint:{'center_x': 0.5,'center_y': 0.2} 
            ScrollView:
                do_scroll_x:False
                MDList:
                    TwoLineAvatarListItem:
                        text: "No of user"
                        id:users
                        secondary_text:"Room 1"
                       
                        hint_text:"4"
                        on_release:app.informer_msg4(1)
                        ImageLeftWidget:
                            source:"images/a.jpg"
                    TwoLineAvatarListItem:
                        text: "No of owners"
                        id:owners
                        secondary_text:"Room 2"
                       
                        hint_text:"4"
                        on_release:app.informer_msg4(2)
                        ImageLeftWidget:
                            source:"images/a.jpg"
                    TwoLineAvatarListItem:
                        text: "No of buildings"
                        id:buildings
                        secondary_text:"Room 3"
                      
                        hint_text:"4"
                        on_release:app.informer_msg4(3)
                        ImageLeftWidget:
                            source:"images/a.jpg"
                   
                    TwoLineAvatarListItem:
                        text: "No of Lands"
                        id:lands
                        secondary_text:"Room 3"
                      
                        hint_text:"4"
                        on_release:app.informer_msg4(3)
                        ImageLeftWidget:
                            source:"images/a.jpg"
                    TwoLineAvatarListItem:
                        text: "Locations"
                        id:locations
                        secondary_text:"Room 3"
                       
                        hint_text:"4"
                        on_release:app.informer_msg4(3)
                        ImageLeftWidget:
                            source:"images/a.jpg"
                    TwoLineAvatarListItem:
                        text: "No of user outside laikipia"
                        id:outside
                        secondary_text:"Room 3"
                       
                        hint_text:"4"
                        on_release:app.informer_msg4(3)
                        ImageLeftWidget:
                            source:"images/a.jpg"
                    
                    
        BoxLayout:
            orientation: 'horizontal'
            size_hint:(1,0.1)
            md_bg_color: (1,1,1,1)
            Label:
                size_hint_x:0.06
