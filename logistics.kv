                text:"Back"
                # on_release:root.manager.current = 'manager'
                on_release:app.ai_builder("manager",2)
                md_bg_color: (52/256, 155/256, 143/256, 1)
            Label:
                size_hint_x:0.06
            
            
                 
            Label:
                size_hint_x:0.06 
            
            
        Label:
            size_hint:(0.06,0.1)           
                

        