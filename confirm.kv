########################################################################
## MAIN SCREEN
########################################################################

MDScreen:
    canvas:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size:(10000,10000)
            pos: self.pos
    # Set screen name
    name: "confirm"
    orientation: 'vertical'

    MDLabel:
        id:errorman
        text:''
        color: 1,0,0,1
        size_hint: 1, 0.1
        
        halign:'center'
        pos_hint_y: 0.3
    MDTextField:
        id:code
        hint_text: "email confimation code"
        helper_text_mode: "on_focus"
        icon_right_color: app.theme_cls.primary_color
        pos_hint:{'x': 0.27, 'y': 0.50}
        
        mode: "rectangle"
        size_hint_x:0.5
        
   
       
    MDRaisedButton:
        text:"Proceed"
        pos_hint:{'x': 0.6, 'y': 0.30}
        size_hint:0.35,0.058
        on_release:app.confirm_code()

    MDRectangleFlatButton:
        text:"Back"
        pos_hint:{'x': 0.13, 'y': 0.30}
        size_hint:0.35,0.058
        # on_release:root.manager.current = 'signin'
        on_release:app.ai_builder("signin",2)
    
        