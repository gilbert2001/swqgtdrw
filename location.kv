
MDScreen:
    canvas:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: (1500,1500)
            pos: self.pos
    # Set screen name
    name: "location"
    orientation: 'vertical'
    
    BoxLayout:
        orientation:"vertical"
        spacing:0
        MDTopAppBar:
            elevation:0
            size_hint:(1,0.04)
            md_bg_color: (1,1,1,1)
        MDTopAppBar:
            elevation:0
            title:"Choose County"
            id:code
            pos_hint_x: -0.03
            
            size_hint:(1,0.2)
            md_bg_color: (1,1,1,1)
            #specific_text_color:(33/256,150/256,243/256,1)
            specific_text_color:(0,0,0,1)
            #right_action_items: [['book', lambda x: nav_drawer.toggle_nav_drawer()]]
        MDTopAppBar:
            elevation:0
            size_hint:(1,0.04)
            md_bg_color: (1,1,1,1)
    
        #BoxLayout:
        BoxLayout:  
            pos_hint:{'center_x': 0.5,'center_y': 0.2} 
            ScrollView:
                do_scroll_x:False
                MDList:
                    id:list
                    OneLineAvatarListItem:
                        text: "None"
                        secondary_text:"portarit"
                        tertiary_text:"paor"
                        hint_text:"4"
                        on_release:app.access_locations(0,self.text)
                       
                    OneLineAvatarListItem:
                        text: "Laikipia"
                        secondary_text:"portarit"
                        tertiary_text:"paor"
