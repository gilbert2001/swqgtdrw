

MDScreen:
    canvas:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: (1500,1500)
            pos: self.pos
    # Set screen name
    name: "search"
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        size_hint:(1,1)
        BoxLayout:
            orientation: 'vertical'
            size_hint:(1,0.1)
            MDTopAppBar:
                elevation:0
                size_hint:(1,0.01)
                md_bg_color: (1,1,1,1)
                specific_text_color:(0,0,0,1)
                
            MDTopAppBar:
                elevation:0
                left_action_items: [["keyboard-backspace", lambda x: app.higher_power()]]
                id:asler
                #on_release:root.manager.current = 'home' 
                halign:'center'
                size_hint:(1,0.09)
                md_bg_color: (1,1,1,0.7)
                specific_text_color:(0,0,0,0.7)
        BoxLayout:
            orientation: 'vertical'
            size_hint:(1,0.15)
            Label:
                text:""
        BoxLayout:
            orientation: 'vertical'
            size_hint:(1,0.25)
            Screen:
                Image:
                    id:p1
                    
                    source: "images/globe.png"
                    
        BoxLayout:
            orientation: 'vertical'
            size_hint:(1,0.1)
            
            MDTextField:
                id:word
                hint_text: ""
                
                line_color_normal:(0/256, 201/256, 112/256, 1)
                icon_right_color: app.theme_cls.primary_color
                pos_hint:{'x': 0.22, 'y': 0.40}
                
                mode: "rectangle"
                size_hint_x:0.6
        BoxLayout:
            orientation: 'horizontal'
            size_hint:(1,0.1)
            Label:
                size_hint_x:0.06
            MDRaisedButton:
                text:"Search"
                md_bg_color: (0/256, 201/256, 112/256, 1) 
                on_release:app.search_items()
            Label:
                size_hint_x:0.06
        BoxLayout:
            orientation: 'horizontal'
            size_hint:(1,0.4)
            
           
        Label:
            size_hint:(0.06,0.03)
        
    

    