########################################################################
## MAIN SCREEN
########################################################################

MDScreen:
    canvas:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size:self.size
            pos: self.pos
    # Set screen name
    name: "password_forgot"
    # Add box layout
    MDLabel:
        id:errorman
        text:''
        color: 1,0,0,1
        size_hint: 1, 0.1
        
        halign:'center'
        pos_hint_y: 0.3
    MDTextField:
        id:first
        hint_text:"Your account email"
        helper_text_mode: "on_focus"
        icon_right_color: app.theme_cls.primary_color
        pos_hint:{'x': 0.27, 'y': 0.50}
        
        mode: "rectangle"
        size_hint_x:0.5
        
   
       
    MDRaisedButton:
        text:"Proceed"
        pos_hint:{'x': 0.6, 'y': 0.30}
        size_hint:0.35,0.058
        on_release:app.inserter(5)

    MDRectangleFlatButton:
        text:"Back"
        pos_hint:{'x': 0.13, 'y': 0.30}
        size_hint:0.35,0.058
        # on_release:root.manager.current = 'selections'
        on_release:app.ai_builder("selections",2)
           












